{
  "suggest.noselect": true,
  "git.enableGutters": true,
  "git.addGBlameToVirtualText": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.virtualTextPrefix": "■■ ",
  "eslint.rules.customizations": [
    { "rule": "max-lines-per-function", "severity": "off" },
    { "rule": "max-lines", "severity": "off" },
    { "rule": "max-statements", "severity": "off" }
  ],
  "rust-analyzer.inlayHints.typeHints.enable": true,
  "rust-analyzer.inlayHints.parameterHints.enable": true,
  "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "skip_trivial",
  "rust-analyzer.debug.runtime": "nvim-dap",
  "rust-analyzer.debug.nvimdap.configuration.template": "require('plugins/dap').get_configuration_template($exe, $args)",
  "coc.preferences.formatOnSave": true,
  "tsserver.maxTsServerMemory": 20000,
  "tsserver.experimental.enableProjectDiagnostics": false,
  "clangd.fallbackFlags": ["--std=c++17"],
  "clangd.trace.server": "verbose",
  "eslint.options": {
    "rules": {
      "no-restricted-syntax": "off"
    }
  }
}
